    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4"
    android:layout_below="@id/order_details_linear_first"
    android:id="@+id/book_detailbox"
    android:background="@color/white"
    android:layout_margin="15dp"
    android:padding="5dp">

    <ImageView
    android:layout_width="0dp"
    android:layout_height="100dp"
    android:layout_weight="1"
    android:layout_marginLeft="10dp"
    android:background="@mipmap/ic_launcher"
    android:layout_gravity="center"
    android:id="@+id/orders_details_book_image"
    />

    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="120dp"
    android:layout_weight="2"
    android:weightSum="5"
    android:orientation="vertical">

    <TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
        android:textColor="#000"
    android:text="Book Name"
        android:maxLines="1"
    android:textAlignment="center"
    android:gravity="center_vertical"
        android:id="@+id/order_details_container_book_name"
    />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:text="Book Condition:"
    android:textAlignment="textEnd"
    android:gravity="center_vertical"
    />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:text="QTY:"
    android:textAlignment="textEnd"
    android:gravity="center_vertical"
    />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:text="MRP:"
    android:textAlignment="textEnd"
    android:gravity="center_vertical"
    />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:text="Shipping+Handling :"
    android:textAlignment="textEnd"
    android:gravity="center_vertical"
    />







    </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
