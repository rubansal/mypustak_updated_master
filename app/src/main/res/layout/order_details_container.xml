                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/order_details_container_book_qty"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/order_details_container_book_mrp"
                android:gravity="center"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/order_details_container_book_pay"
                android:gravity="center"
                />

        </LinearLayout>




